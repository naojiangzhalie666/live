<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_gift_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="3dp">

        <ImageView
            android:id="@+id/iv_gift_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/muge"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/tv_gift_name"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textColor="#F7D4B6"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_gift_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textColor="#F7D4B6"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/live_gift_give_gift"
            android:textColor="@color/live_gift_dark_orange"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/gift_num"
        android:visibility="gone"
        tools:visibility="visible"
        android:minWidth="15dp"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/bg_circle_red"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="10sp" />
</FrameLayout>