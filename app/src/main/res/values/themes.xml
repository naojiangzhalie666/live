<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="StartStyle" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="ActivityDialog_helf" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>  <!--设置dialog的背景-->
        <item name="android:windowFrame">@null</item><!--设置Dialog的windowFrame框为无-->
        <item name="android:windowNoTitle">true</item>        <!--设置无标题-->
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>   <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item>      <!--是否半透明-->
        <item name="android:windowContentOverlay">@null</item>     <!--设置窗口内容不覆盖-->
        <!--设置动画，在这里使用让它继承系统的Animation.Dialog-->
        <item name="android:backgroundDimEnabled">false</item>     <!--背景是否模糊显示-->
        <item name="android:gravity">bottom</item>
    </style>
    <style name="ActivityDialog_chathelf" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>  <!--设置dialog的背景-->
        <item name="android:windowFrame">@null</item><!--设置Dialog的windowFrame框为无-->
        <item name="android:windowNoTitle">true</item>        <!--设置无标题-->
        <item name="windowNoTitle">true</item>
      <!--  <item name="android:windowIsFloating">true</item>   &lt;!&ndash;是否浮现在activity之上&ndash;&gt;-->
        <item name="android:windowIsTranslucent">true</item>      <!--是否半透明-->
        <item name="android:windowContentOverlay">@null</item>     <!--设置窗口内容不覆盖-->
        <!--设置动画，在这里使用让它继承系统的Animation.Dialog-->
        <item name="android:backgroundDimEnabled">false</item>     <!--背景是否模糊显示-->
        <item name="android:gravity">bottom</item>
    </style>
</resources>