<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/denti_bgtwo"
    android:paddingLeft="@dimen/dp_15"
    android:paddingTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_40"
    tools:context=".fragment.identy.IdentyTworagment">

    <TextView
        android:id="@+id/identyone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="银行卡号"
        android:textColor="@color/black_oneeight"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/identytwo_bankname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/mine_next"
        android:text="招商银行"
        android:textColor="@color/black_oneeight"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/identytwo_bankimg"
        app:layout_constraintTop_toBottomOf="@+id/textView42" />

    <TextView
        android:id="@+id/textView48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="手机号码"
        android:textColor="@color/black_oneeight"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView43" />

    <TextView
        android:id="@+id/textView49"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="短信验证"
        android:textColor="@color/black_oneeight"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView44" />

    <EditText
        android:id="@+id/identytwo_kanum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:background="@null"
        android:hint="请输入银行卡号"
        android:textColor="@color/nineninenine"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/identyone_tv"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/identytwo_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="right"
        android:hint="请填写手机号码"
        android:textColor="@color/nineninenine"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView48"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/textView42"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1_5"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/line_dott"
        android:layerType="software"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/identyone_tv" />

    <View
        android:id="@+id/textView43"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1_5"
        android:layout_marginTop="10dp"
        android:background="@drawable/line_dott"
        android:layerType="software"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/identytwo_bankname" />

    <View
        android:id="@+id/textView44"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1_5"
        android:layout_marginTop="10dp"
        android:background="@drawable/line_dott"
        android:layerType="software"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView48" />

    <View
        android:id="@+id/textView47"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1_5"
        android:layout_marginTop="10dp"
        android:background="@drawable/line_dott"
        android:layerType="software"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView49" />

    <ImageView
        android:id="@+id/identytwo_bankimg"
        android:layout_width="@dimen/dp_27"
        android:layout_height="@dimen/dp_27"
        android:src="@drawable/login_wchat"
        app:layout_constraintBottom_toBottomOf="@+id/identytwo_bankname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/identytwo_bankname" />

    <EditText
        android:id="@+id/identytwo_yzm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_8"
        android:background="@null"
        android:gravity="right"
        android:hint="请输入验证码"
        android:textColor="@color/black_oneeight"
        android:textColorHint="#DFDFDF"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView49"
        app:layout_constraintEnd_toStartOf="@+id/identytwo_getyzm" />

    <TextView
        android:id="@+id/identytwo_getyzm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_circle_solder_setin"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_2"
        android:text="获取验证码"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/identytwo_yzm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/identytwo_yzm" />

    <CheckBox
        android:id="@+id/identytwo_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:button="@drawable/denty_cb"
        android:paddingLeft="@dimen/dp_3"
        android:text="我已同意边框心里"
        android:textColor="@color/nineninenine"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView47" />

    <TextView
        android:id="@+id/identytwo_xieyi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="《服务协议》"
        android:textColor="@color/home_txt"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/identytwo_cb"
        app:layout_constraintStart_toEndOf="@+id/identytwo_cb" />

    <Button
        android:id="@+id/identy_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_circle_solder_setin"
        android:text="马上认证"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/identytwo_xieyi" />
</androidx.constraintlayout.widget.ConstraintLayout>