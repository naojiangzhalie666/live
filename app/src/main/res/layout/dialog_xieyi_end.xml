<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/dp_56"
    android:layout_marginRight="@dimen/dp_56"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner_ft">

    <TextView
        android:id="@+id/dig_xieyi_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_16"
        android:padding="@dimen/dp_10"
        android:textColor="@color/home_txt"
        android:text="很抱歉，若您不同意《隐私协议》，我们将无法正常为您服务。"
        app:layout_constraintBottom_toTopOf="@+id/dig_xieyied_notagr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/dig_xieyied_notagr"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_35"
        android:background="@drawable/bg_xiey_notagree"
        android:layout_margin="@dimen/dp_16"
        android:text="退出应用"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dig_xieyied_agr"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dig_xieyi_ll" />

    <Button
        android:id="@+id/dig_xieyied_agr"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_35"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/bg_xiey_agree"
        android:text="再次阅读"
        app:layout_constraintBottom_toBottomOf="@+id/dig_xieyied_notagr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dig_xieyied_notagr"
        app:layout_constraintTop_toTopOf="@+id/dig_xieyied_notagr" />
</androidx.constraintlayout.widget.ConstraintLayout>