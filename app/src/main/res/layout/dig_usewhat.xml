<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner_white_tp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_20">


    <TextView
        android:id="@+id/dig_usewhat_diamond"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_38"
        android:paddingTop="@dimen/dp_22"
        android:paddingBottom="@dimen/dp_22"
        android:text="使用钻石（余额：0）"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/dig_usewhat_imgvone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/textView132"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:background="@color/ftwo"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dig_usewhat_diamond" />

    <TextView
        android:id="@+id/dig_usewhat_fuwubao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_38"
        android:paddingTop="@dimen/dp_22"
        android:paddingBottom="@dimen/dp_22"
        android:text="使用服务包"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/dig_usewhat_imgvtwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView132" />

    <View
        android:id="@+id/textView140"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:background="@color/ftwo"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dig_usewhat_fuwubao" />

    <TextView
        android:id="@+id/dig_usewhat_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_38"
        android:paddingTop="@dimen/dp_22"
        android:paddingBottom="@dimen/dp_22"
        android:text="使用咨询卡"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/dig_usewhat_imgvthree"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView140" />

    <View
        android:id="@+id/textView142"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_6"
        android:background="@color/ftwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dig_usewhat_card" />

    <TextView
        android:id="@+id/dig_usewhat_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/use_grad"
        android:paddingLeft="@dimen/dp_50"
        android:paddingTop="@dimen/dp_6"
        android:paddingRight="@dimen/dp_50"
        android:paddingBottom="@dimen/dp_6"
        android:text="充值"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dig_usewhat_sure"
        app:layout_constraintTop_toBottomOf="@+id/textView142" />

    <TextView
        android:id="@+id/dig_usewhat_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/use_grad"
        android:paddingLeft="@dimen/dp_50"
        android:paddingTop="@dimen/dp_6"
        android:paddingRight="@dimen/dp_50"
        android:paddingBottom="@dimen/dp_6"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/dig_usewhat_buy"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView142" />

    <ImageView
        android:id="@+id/dig_usewhat_imgvone"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingRight="@dimen/dp_22"
        android:src="@drawable/dig_use_unse"
        app:layout_constraintBottom_toBottomOf="@+id/dig_usewhat_diamond"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dig_usewhat_diamond" />

    <ImageView
        android:id="@+id/dig_usewhat_imgvtwo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingRight="@dimen/dp_22"
        android:src="@drawable/dig_use_unse"
        app:layout_constraintBottom_toBottomOf="@+id/dig_usewhat_fuwubao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dig_usewhat_diamond" />

    <ImageView
        android:id="@+id/dig_usewhat_imgvthree"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingRight="@dimen/dp_22"
        android:src="@drawable/dig_use_unse"
        app:layout_constraintBottom_toBottomOf="@+id/dig_usewhat_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dig_usewhat_card" />
    <androidx.constraintlayout.widget.Group
        android:layout_width="@dimen/dp_0"
        app:constraint_referenced_ids="dig_usewhat_diamond,dig_usewhat_imgvone,textView132"
        android:visibility="gone"
        android:id="@+id/id_one"
        android:layout_height="@dimen/dp_0"/>
    <androidx.constraintlayout.widget.Group
        android:layout_width="@dimen/dp_0"
        app:constraint_referenced_ids="dig_usewhat_fuwubao,dig_usewhat_imgvtwo,textView140"
        android:visibility="gone"
        android:id="@+id/id_two"
        android:layout_height="@dimen/dp_0"/>
    <androidx.constraintlayout.widget.Group
        android:layout_width="@dimen/dp_0"
        app:constraint_referenced_ids="dig_usewhat_card,dig_usewhat_imgvthree,textView142"
        android:visibility="gone"
        android:id="@+id/id_three"
        android:layout_height="@dimen/dp_0"/>
</androidx.constraintlayout.widget.ConstraintLayout>