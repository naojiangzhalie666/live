<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.WebVActivity">

    <ImageView
        android:id="@+id/web_back"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/title_top"
        android:paddingRight="@dimen/dp_20"
        android:src="@drawable/back_bold"
        app:layout_constraintBottom_toBottomOf="@+id/web_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/web_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:padding="@dimen/dp_10"
        android:textColor="@color/black"
        android:textSize="@dimen/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="标题" />

    <View
        android:id="@+id/web_line"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:background="@color/ftwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/web_title" />

    <LinearLayout
        android:id="@+id/web_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/web_good_new"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/web_line"/>

    <TextView
        android:id="@+id/web_good_new"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/home_web_bg"
        android:layout_marginStart="@dimen/dp_55"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/home_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/web_good_how"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="新人福利"
        />

    <TextView
        android:id="@+id/web_good_how"
        android:background="@drawable/home_web_bg"
        android:layout_width="0dp"
        android:padding="@dimen/dp_10"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/home_txt"
        android:layout_marginEnd="@dimen/dp_55"
        android:layout_marginStart="@dimen/dp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/web_good_new"
        app:layout_constraintTop_toTopOf="@+id/web_good_new"
        app:layout_constraintBottom_toBottomOf="@+id/web_good_new"
        android:layout_height="0dp"
        android:text="如何体验"
   />


</androidx.constraintlayout.widget.ConstraintLayout>