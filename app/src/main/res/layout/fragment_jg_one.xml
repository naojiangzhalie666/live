<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_15"
    android:scrollbars="none"
    tools:context=".fragment.setin.JgOneFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_20">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner_whitea"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15">

            <TextView
                android:id="@+id/jgone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="15dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="头像"
                android:textColor="@color/black_oneeight"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/textView25"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_8"
                android:text="*"
                android:textColor="@color/red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/jgone_tv" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="15dp"
                android:text="机构名称"
                android:textColor="@color/black_oneeight"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/textView26"
                app:layout_constraintTop_toBottomOf="@+id/textView42" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView45" />

            <EditText
                android:id="@+id/jgone_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="right"
                android:hint="机构对外品牌名"
                android:lines="1"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/black_oneeight"
                android:textSize="11sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView45"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView45" />

            <View
                android:id="@+id/textView43"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1_5"
                android:layout_marginTop="15dp"
                android:background="@drawable/line_dott"
                android:layerType="software"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.727"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView45" />

            <TextView
                android:id="@+id/textVi45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="15dp"
                android:text="机构电话"
                android:textColor="@color/black_oneeight"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/textView26"
                app:layout_constraintTop_toBottomOf="@+id/textView43" />

            <TextView
                android:id="@+id/textVi26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textVi45" />

            <EditText
                android:id="@+id/jgone_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="right"
                android:hint="请填写机构电话"
                android:inputType="number"
                android:lines="1"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/black_oneeight"
                android:textSize="11sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textVi45"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textVi45" />

            <View
                android:id="@+id/textVi43"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1_5"
                android:layout_marginTop="15dp"
                android:background="@drawable/line_dott"
                android:layerType="software"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.727"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textVi45" />

            <TextView
                android:id="@+id/textVie45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="15dp"
                android:text="机构地址"
                android:textColor="@color/black_oneeight"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/textView26"
                app:layout_constraintTop_toBottomOf="@+id/textVi43" />

            <TextView
                android:id="@+id/textVie26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textVie45" />

            <EditText
                android:id="@+id/jgone_position"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="right"
                android:hint="请填写机构地址"
                android:lines="1"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/black_oneeight"
                android:textSize="11sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textVie45"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textVie45" />

            <View
                android:id="@+id/textVie43"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1_5"
                android:layout_marginTop="15dp"
                android:background="@drawable/line_dott"
                android:layerType="software"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.727"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textVie45" />

            <TextView
                android:id="@+id/textView49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="15dp"
                android:text="营业执照"
                android:textColor="@color/black_oneeight"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/textView27"
                app:layout_constraintTop_toBottomOf="@+id/textVie43" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView49" />

            <TextView
                android:id="@+id/tvtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@null"
                android:gravity="right"
                android:hint="请上传企业LOGO"
                android:textColor="@color/black_oneeight"
                android:textSize="11sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/jgone_tv"
                app:layout_constraintEnd_toStartOf="@+id/jgone_head" />

            <ImageView
                android:id="@+id/jgone_head"
                android:layout_width="@dimen/dp_23"
                android:layout_height="@dimen/dp_23"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/bg_circle_dc"
                app:layout_constraintBottom_toBottomOf="@+id/tvtv"
                app:layout_constraintEnd_toStartOf="@+id/tvone"
                app:layout_constraintTop_toTopOf="@+id/tvtv" />

            <ImageView
                android:id="@+id/tvone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mine_next"
                app:layout_constraintBottom_toBottomOf="@+id/tvtv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvtv" />


            <View
                android:id="@+id/textView42"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1_5"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/line_dott"
                android:layerType="software"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/jgone_tv" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/jgone_confrond"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="5dp"
                android:background="@drawable/bg_corner_ft"
                app:layout_constraintEnd_toStartOf="@+id/jgone_conback"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView49">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ruzhu_add"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/jgone_frond"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="w,3:2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="相关证件"
                android:textColor="@color/nineninenine"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="@+id/jgone_confrond"
                app:layout_constraintStart_toStartOf="@+id/jgone_confrond"
                app:layout_constraintTop_toBottomOf="@+id/jgone_confrond" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/jgone_conback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/bg_corner_ft"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/jgone_confrond"
                app:layout_constraintTop_toBottomOf="@+id/textView49"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ruzhu_add"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/jgone_back"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="w,3:2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView51"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="相关证件"
                android:textColor="@color/nineninenine"
                android:textSize="11sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/jgone_conback"
                app:layout_constraintStart_toStartOf="@+id/jgone_conback"
                app:layout_constraintTop_toBottomOf="@+id/jgone_conback"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/bg_corner_whitea"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_20">

            <TextView
                android:id="@+id/jgone_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="机构简介"
                android:textColor="@color/black_oneeight"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/textView29"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_8"
                android:text="*"
                android:textColor="@color/red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/jgone_" />

            <EditText
                android:id="@+id/jgone_jianjie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_corner_ft"
                android:gravity="left|top"
                android:hint="这是一段自我介绍，建议50-100字："
                android:minHeight="@dimen/dp_80"
                android:padding="@dimen/dp_8"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/jgone_" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/setin_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_circle_solder_setin"
            android:text="下一页"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>
</ScrollView>