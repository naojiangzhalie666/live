<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_48"
    android:layout_marginRight="@dimen/dp_48"
    android:background="@drawable/bg_corner_ft">

    <TextView
        android:id="@+id/textView147"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_15"
        android:text="边框心理隐私政策概要"
        android:textColor="@color/home_txt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/textView149"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/home_txt"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView147" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/dig_xieyi_scr"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_280"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        app:layout_constraintBottom_toTopOf="@+id/dig_xieyi_notagr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView149">

        <LinearLayout
            android:id="@+id/dig_xieyi_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="亲爱的边框心理用户"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/dig_xxx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                tools:text="感谢您使用边框心理！我们非常重视您的个人信息和隐私安全。为了更好地保障您的个人权益，请您充分阅读并理解《隐私权条款》和《用户协议》的全部内容，同意并接受全部条款后开始使用我们的产品和服务。"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="1、为了更好的提供注册登录、浏览关注、私密连线、消费支付等服务，我们会根据您使用服务的具体功能需要，收集必要的用户信息（可能涉及帐户、实名、设备、交易、日志等相关信息）"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="2、未经您同意，我们不会从第三方获取、共享或对外提供您的个人信息；"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="3、您可以访问、更正、删除个人信息，我们也将提供举报、投诉方式。我们已采用业内先进的信息保护措施，并会持续优化信息保护技术和安全管理流程保护您的个人信息安全，感谢您的信任。"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/dig_xieyi_notagr"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_30"
        android:layout_margin="@dimen/dp_16"
        android:background="@drawable/bg_xiey_notagree"
        android:text="不同意"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dig_xieyi_agr"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dig_xieyi_scr" />

    <Button
        android:id="@+id/dig_xieyi_agr"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/bg_xiey_agree"
        android:text="同意"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/dig_xieyi_notagr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dig_xieyi_notagr"
        app:layout_constraintTop_toTopOf="@+id/dig_xieyi_notagr" />
</androidx.constraintlayout.widget.ConstraintLayout>