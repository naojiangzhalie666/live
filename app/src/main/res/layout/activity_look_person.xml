<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ftwo"
    tools:context=".ui.LookPersonActivity">

    <ImageView
        android:id="@+id/parallax"
        android:layout_width="match_parent"
        android:layout_height="396dp"
        android:visibility="gone"
        android:layout_marginTop="-150dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/personal_bg"
        app:layout_collapseMode="parallax" />

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/smart"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.scwang.smart.refresh.header.ClassicsHeader
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlPrimaryColor="@android:color/transparent"
            app:srlAccentColor="@android:color/white"/>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10">

                <ImageView
                    android:id="@+id/personal_head"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@+id/guidelin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/personal_bg" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="@dimen/dp_196" />

                <ImageView
                    android:id="@+id/personal_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_13"
                    android:paddingTop="@dimen/dp_55"
                    android:paddingRight="@dimen/dp_20"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/personal_back" />

                <ImageView
                    android:id="@+id/personal_more"
                    android:layout_width="wrap_content"
                    android:paddingRight="@dimen/dp_13"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_20"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_13"
                    app:layout_constraintBottom_toBottomOf="@+id/personal_back"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/personal_ddd" />

                <ImageView
                    android:id="@+id/personal_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_13"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/personal_back"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/personal_share" />


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="@dimen/dp_171" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_14"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/personal_grad"
                    android:padding="@dimen/dp_10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline11">

                    <TextView
                        android:id="@+id/personal_namee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/personal_sun"
                        android:drawablePadding="@dimen/dp_3"
                        android:paddingTop="@dimen/dp_5"
                        android:text="心理咨询师："
                        android:textSize="18sp"
                        android:textColor="@color/home_txt"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/personal_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_8"
                        android:textColor="@color/home_txt"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/personal_onesure"
                        app:layout_constraintStart_toEndOf="@+id/personal_namee"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="帅帅帅" />

                    <TextView
                        android:id="@+id/personal_jigouu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableLeft="@drawable/personal_renz"
                        android:drawablePadding="@dimen/dp_3"
                        android:text="所属机构："
                        android:textColor="@color/home_txt"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/personal_name" />

                    <TextView
                        android:id="@+id/personal_jigou"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/home_txt"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toStartOf="@+id/personal_id"
                        app:layout_constraintStart_toEndOf="@+id/personal_jigouu"
                        app:layout_constraintTop_toBottomOf="@+id/personal_name"
                        tools:text="天宇新航心理咨询机构" />

                    <TextView
                        android:id="@+id/personal_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/home_txt"
                        android:textSize="12sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/personal_jigouu"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="ID:12313" />

                    <ImageView
                        android:id="@+id/personal_oneedt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_20"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/personal_edt" />

                    <TextView
                        android:id="@+id/personal_onesure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/personal_sure"
                        android:gravity="center"
                        android:text="确定"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/personal_onerecy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/personal_jigou"
                        tools:itemCount="1"
                        tools:listitem="@layout/item_talk" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/personal_white"
                    android:padding="@dimen/dp_10"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout3"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout3"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

                    <TextView
                        android:id="@+id/textView63"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="相册/资料"
                        android:textColor="@color/threethree"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView64"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="个人简介"
                        android:textColor="@color/threethree"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/personal_tworecy" />

                    <ImageView
                        android:id="@+id/showgoods_edt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_20"
                        app:layout_constraintBottom_toBottomOf="@+id/textView63"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:srcCompat="@drawable/personal_edt" />

                    <TextView
                        android:id="@+id/showgoods_edtsure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/personal_sure"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="确定"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView63"
                        app:srcCompat="@drawable/personal_edt" />


                    <ImageView
                        android:id="@+id/personal_threeedt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_20"
                        app:layout_constraintBottom_toBottomOf="@+id/textView64"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:srcCompat="@drawable/personal_edt" />

                    <TextView
                        android:id="@+id/personal_threesure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/personal_sure"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="确定"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/textView64"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:srcCompat="@drawable/personal_edt" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/personal_tworecy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView63"
                        tools:itemCount="1" />

                    <EditText
                        android:id="@+id/personal_geren"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@null"
                        android:hint="请输入或编辑个人简介"
                        android:textColor="@color/threethree"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView64" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/personal_white"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout3"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout3"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout4">

                    <TextView
                        android:id="@+id/tt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务项目"
                        android:textColor="@color/threethree"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/personal_fouredt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_20"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/tt"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:srcCompat="@drawable/personal_edt" />

                    <TextView
                        android:id="@+id/personal_foursure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/personal_sure"
                        android:gravity="center"
                        android:text="确定"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/tt"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:srcCompat="@drawable/personal_edt" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/personal_thiredrecy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/look_bttalk"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tt"
                        app:layout_constraintVertical_bias="0.0"
                        tools:itemCount="1" />

                    <TextView
                        android:id="@+id/look_btshare"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_26"
                        android:layout_marginRight="@dimen/dp_25"
                        android:layout_marginBottom="@dimen/dp_25"
                        android:background="@drawable/mine_grad"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        android:text="分享"
                        android:textColor="@color/login_txt"
                        android:textSize="18sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/look_bttalk"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/personal_thiredrecy"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/look_bttalk"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="@drawable/mine_grad"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        android:text="私聊"
                        android:textColor="@color/login_txt"
                        android:textSize="18sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/look_btshare"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/look_btshare"
                        app:layout_constraintTop_toTopOf="@+id/look_btshare"
                        tools:visibility="visible" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</FrameLayout>