<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ftwo"
    tools:context=".ui.WithdrawalActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imgv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/title"
            android:layout_alignBottom="@+id/title"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/title_top"
            android:paddingRight="@dimen/dp_20"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/title_top"
            android:text="提现"
            android:textColor="@color/black"
            android:textSize="@dimen/titile_size" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/con_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/bg_corner_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/textView70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="23dp"
                    android:text="到账账户"
                    android:textColor="@color/black_oneeight"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/tx_imgv_wechat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:src="@drawable/tx_se"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tx_imgv_zfb"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/textView70"
                    app:layout_constraintTop_toBottomOf="@+id/textView70" />

                <TextView
                    android:id="@+id/tx_tv_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/tx_wechat"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="微信"
                    android:textColor="@color/black_oneeight"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tx_imgv_wechat"
                    app:layout_constraintEnd_toEndOf="@+id/tx_imgv_wechat"
                    app:layout_constraintStart_toStartOf="@+id/tx_imgv_wechat"
                    app:layout_constraintTop_toTopOf="@+id/tx_imgv_wechat" />

                <ImageView
                    android:id="@+id/tx_imgv_zfb"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:src="@drawable/tx_nse"
                    app:layout_constraintBottom_toBottomOf="@+id/tx_imgv_wechat"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tx_imgv_wechat"
                    app:layout_constraintTop_toTopOf="@+id/tx_imgv_wechat"></ImageView>

                <TextView
                    android:id="@+id/tx_tv_zfb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/tx_zfb"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="支付宝"
                    android:textColor="@color/black_oneeight"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tx_imgv_zfb"
                    app:layout_constraintEnd_toEndOf="@+id/tx_imgv_zfb"
                    app:layout_constraintStart_toStartOf="@+id/tx_imgv_zfb"
                    app:layout_constraintTop_toTopOf="@+id/tx_imgv_zfb" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/con_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="1dp"
                android:background="@drawable/bg_corner_white"
                android:paddingBottom="@dimen/dp_15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/con_one">

                <TextView
                    android:id="@+id/textView75"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="32dp"
                    android:text="提现金额"
                    android:textColor="@color/black_oneeight"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView76"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="￥"
                    android:textColor="@color/black"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/textView75"
                    app:layout_constraintTop_toBottomOf="@+id/textView75" />

                <EditText
                    android:id="@+id/withdra_edt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="34dp"
                    android:background="@null"
                    android:hint="请输入您想提现的金额"
                    android:inputType="number|numberDecimal"
                    android:lines="1"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_5"
                    android:textColor="@color/black"
                    android:textColorHint="@color/efiveefive"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView76"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView76" />

                <View
                    android:id="@+id/textView78"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@color/ftwo"
                    android:text="TextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView76" />

                <TextView
                    android:id="@+id/withdrawal_nowmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:textColor="@color/nineninenine"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="@+id/textView78"
                    app:layout_constraintTop_toBottomOf="@+id/textView78"
                    tools:text="当前零钱余额14863.22元，" />

                <TextView
                    android:id="@+id/withdrawal_nowmoney2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="平台手续费 "
                    android:textColor="@color/nineninenine"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="@+id/textView78"
                    app:layout_constraintTop_toBottomOf="@+id/withdrawal_nowmoney" />

                <TextView
                    android:id="@+id/withdrawal_nowmoney3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="个税费用 "
                    android:textColor="@color/nineninenine"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="@+id/textView78"
                    app:layout_constraintTop_toBottomOf="@+id/withdrawal_nowmoney2" />

                <TextView
                    android:id="@+id/withdrawal_nowmoney4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="实际到账 "
                    android:textColor="@color/nineninenine"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="@+id/textView78"
                    app:layout_constraintTop_toBottomOf="@+id/withdrawal_nowmoney3" />

                <TextView
                    android:id="@+id/withdrawal_alltix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_4"
                    android:text="全部提现"
                    android:textColor="#0A57AF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    app:layout_constraintBaseline_toBaselineOf="@+id/withdrawal_nowmoney"
                    app:layout_constraintStart_toEndOf="@+id/withdrawal_nowmoney" />

                <TextView
                    android:id="@+id/withdrawal_ptmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_4"
                    android:text="0.00元"
                    android:textColor="@color/nineninenine"
                    android:textSize="11sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/withdrawal_nowmoney2"
                    app:layout_constraintStart_toEndOf="@+id/withdrawal_nowmoney2" />

                <TextView
                    android:id="@+id/withdrawal_gsmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_4"
                    android:text="0.00元"
                    android:textColor="@color/nineninenine"
                    android:textSize="11sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/withdrawal_nowmoney3"
                    app:layout_constraintStart_toEndOf="@+id/withdrawal_nowmoney3" />

                <TextView
                    android:id="@+id/withdrawal_sjmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_4"
                    android:text="0.00元"
                    android:textColor="@color/nineninenine"
                    android:textSize="11sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/withdrawal_nowmoney4"
                    app:layout_constraintStart_toEndOf="@+id/withdrawal_nowmoney4" />

                <TextView
                    android:id="@+id/withdrawal_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最低提现金额30元"
                    android:layout_marginTop="@dimen/dp_4"
                    android:textColor="@color/nineninenine"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="@+id/withdrawal_nowmoney4"
                    app:layout_constraintTop_toBottomOf="@+id/withdrawal_nowmoney4" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/con_bt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/bg_corner_white"
                android:paddingBottom="@dimen/dp_22"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/con_main">


                <TextView
                    android:id="@+id/textView72"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="19dp"
                    android:paddingTop="@dimen/dp_22"
                    android:text="账号："
                    android:textColor="@color/sixsixsix"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView74"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_19"
                    android:text="真实姓名："
                    android:textColor="@color/sixsixsix"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="@+id/textView72"
                    app:layout_constraintTop_toBottomOf="@+id/textView77" />

                <TextView
                    android:id="@+id/textView77"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="19dp"
                    android:background="#E5E5E5"

                    android:text="TextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView72"
                    app:layout_constraintTop_toBottomOf="@+id/textView72" />

                <EditText
                    android:id="@+id/witdraw_zhangh"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@null"
                    android:hint="请输入您的手机号"
                    android:paddingTop="@dimen/dp_22"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView72"
                    app:layout_constraintEnd_toEndOf="@+id/textView77"
                    app:layout_constraintStart_toStartOf="@+id/witdraw_name"
                    app:layout_constraintTop_toTopOf="@+id/textView72" />

                <EditText
                    android:id="@+id/witdraw_name"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="16dp"
                    android:background="@null"
                    android:hint="请输入您微信绑定的身份证姓名"
                    android:paddingTop="@dimen/dp_19"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView74"
                    app:layout_constraintEnd_toEndOf="@+id/textView77"
                    app:layout_constraintStart_toEndOf="@+id/textView74"
                    app:layout_constraintTop_toTopOf="@+id/textView74" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_marginRight="@dimen/dp_60"
                android:background="@drawable/bg_circle_solder_setin"
                android:text="提现"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/con_bt" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_28"
                android:layout_marginRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button">

                <TextView
                    android:id="@+id/textView123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提现规则："
                    android:textColor="@color/nineninenine"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView124"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:text="1. 请仔细核对您的提现信息，如果因信息填写错误导致转账失败或转给他人，责任自负。"
                    android:textColor="@color/nineninenine"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView123" />

                <TextView
                    android:id="@+id/textView125"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/nineninenine"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView124"
                    tools:text="2." />

                <TextView
                    android:id="@+id/textView126"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:text="3. 根据国家法律要求，单次提现金额不能超过50000元人民币。"
                    android:textColor="@color/nineninenine"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView125" />

                <TextView
                    android:id="@+id/textView127"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:text="4. 本平台提现将收取0.10%服务费，10%的个人所得税。"
                    android:textColor="@color/nineninenine"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView126" />

                <TextView
                    android:id="@+id/textView128"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/nineninenine"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView127"
                    tools:text="5." />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>