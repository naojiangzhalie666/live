<?xml version="1.0" encoding="utf-8"?>
<com.luck.picture.lib.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_1_5"
    android:layout_marginRight="@dimen/dp_1_5"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/fiv"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_home_corner"
        tools:src="@color/app_color_f6" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pic_add_ll"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_home_corner"
        android:visibility="gone"
        tools:visibility="visible">

        <View
            android:id="@+id/item_person_line_ver"
            android:layout_width="@dimen/dp_3"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_25"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/item_person_line_hor"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/fiv"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/personal_delete"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@id/fiv"
        android:layout_alignRight="@id/fiv"
        android:layout_alignBottom="@id/fiv"
        android:background="@drawable/picture_icon_shadow_bg"
        android:drawableLeft="@drawable/picture_icon_video"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingTop="8dp"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/fiv"
        android:layout_alignBottom="@id/fiv"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_3"
        android:background="@drawable/bg_corner_p"
        android:paddingLeft="@dimen/dp_4"
        android:paddingTop="@dimen/dp_0_5"
        android:paddingRight="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_0_5"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:visibility="gone"
        tools:text="+3"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/tv_edt"
        android:layout_width="@dimen/dp_90"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/fiv"
        android:layout_alignRight="@id/fiv"
        android:layout_alignBottom="@id/fiv"
        android:background="@null"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:paddingBottom="@dimen/dp_3"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="10sp"
        tools:text="情感导师-阳阳" />

</com.luck.picture.lib.widget.SquareRelativeLayout>