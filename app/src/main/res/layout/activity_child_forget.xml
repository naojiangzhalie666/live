<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.ChildLoginActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imgv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/title_top"
            android:layout_alignTop="@+id/title"
            android:layout_alignBottom="@+id/title"
            android:paddingRight="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_12"
            app:srcCompat="@drawable/back_bold" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="手机号"
            android:paddingTop="@dimen/title_top"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="@dimen/titile_size" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvone"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/bg_circle_slog"
        android:gravity="center"
        android:text="子"
        android:textColor="@color/login_txt"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <TextView
        android:id="@+id/textView151"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="机构子账号 - 重置密码"
        android:textColor="@color/threethree"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvone" />

    <TextView
        android:id="@+id/textView135"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:text="账号"
        android:minWidth="@dimen/dp_45"
        android:textColor="@color/black_oneeight"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView151" />

    <EditText
        android:id="@+id/child_login_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:background="@null"
        android:hint="请输入机构子账号ID"
        android:lines="1"
        android:padding="@dimen/dp_10"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView135"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView135"
        app:layout_constraintTop_toTopOf="@+id/textView135" />

    <View
        android:id="@+id/textView145"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@color/ftwo"
        app:layout_constraintEnd_toEndOf="@+id/child_login_name"
        app:layout_constraintStart_toStartOf="@+id/textView135"
        app:layout_constraintTop_toBottomOf="@+id/textView135" />

    <TextView
        android:id="@+id/textView146"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:minWidth="@dimen/dp_45"
        android:text="验证码"
        android:textColor="@color/black_oneeight"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView135"
        app:layout_constraintTop_toBottomOf="@+id/textView145" />

    <EditText
        android:id="@+id/child_login_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="请输入验证码"
        android:lines="1"
        android:padding="@dimen/dp_10"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView146"
        app:layout_constraintEnd_toStartOf="@+id/child_login_forget"
        app:layout_constraintStart_toEndOf="@+id/textView146"
        app:layout_constraintTop_toTopOf="@+id/textView146" />

    <View
        android:id="@+id/textView148"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@color/ftwo"
        app:layout_constraintEnd_toEndOf="@+id/child_login_name"
        app:layout_constraintStart_toStartOf="@+id/textView146"
        app:layout_constraintTop_toBottomOf="@+id/textView146" />

    <TextView
        android:id="@+id/child_login_cannot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dp_50"
        android:gravity="center"
        android:text="收不到验证码?"
        android:textColor="#0DACF6"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_2"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/textView148"
   app:layout_constraintTop_toBottomOf="@+id/textView148" />

    <TextView
        android:id="@+id/child_login_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dp_50"
        android:gravity="center"
        android:text="获取验证码"
        android:background="@drawable/bg_corner_homea_child"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingTop="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_2"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/child_login_code"
        app:layout_constraintEnd_toEndOf="@+id/child_login_name"
        app:layout_constraintTop_toTopOf="@+id/child_login_code" />

    <TextView
        android:id="@+id/child_login_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_circle_slog_child"
        android:gravity="center"
        android:padding="@dimen/dp_15"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/child_login_name"
        app:layout_constraintStart_toStartOf="@+id/textView135"
        app:layout_constraintTop_toBottomOf="@+id/textView148" />


</androidx.constraintlayout.widget.ConstraintLayout>