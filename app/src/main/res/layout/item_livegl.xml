<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8"
    android:background="@drawable/bg_corner_whitelit">

    <TextView
        android:id="@+id/item_livegl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingTop="@dimen/dp_12"
        android:textColor="@color/black"
        android:paddingBottom="@dimen/dp_12"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="新人必读" />

    <ImageView
        android:id="@+id/item_livegl_imgv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingRight="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="@+id/item_livegl_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_livegl_title"
        app:srcCompat="@drawable/fuchi_bt" />

    <View
        android:id="@+id/item_livegl_line"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:background="@color/ftwo"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_livegl_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_livegl_recy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_livegl_line" />
</androidx.constraintlayout.widget.ConstraintLayout>