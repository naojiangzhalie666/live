<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ftwo"
    tools:context=".ui.MybackpActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"
        android:background="@drawable/msg_tpbg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/title_top"
            android:text="我的背包"
            android:textColor="@color/login_txt"
            android:textSize="@dimen/titile_size" />

        <ImageView
            android:id="@+id/mybackp_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv"
            android:paddingTop="@dimen/title_top"
            android:paddingRight="@dimen/dp_20"
            android:layout_alignBottom="@+id/tv"
            android:paddingLeft="@dimen/dp_8"
            android:src="@drawable/back_ye" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3">

        <TextView
            android:id="@+id/mybackp_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/back_grad"
            android:paddingLeft="@dimen/dp_24"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_24"
            android:paddingBottom="@dimen/dp_5"
            android:text="礼物"
            android:textColor="@color/login_txt"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mybackp_daihy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/mybackp_gift"
            android:background="@drawable/back_grad"
            android:paddingLeft="@dimen/dp_24"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_24"
            android:paddingBottom="@dimen/dp_5"
            android:text="道具"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/mybackp_shichang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/mybackp_daihy"
            android:background="@drawable/back_grad"
            android:paddingLeft="@dimen/dp_24"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_24"
            android:paddingBottom="@dimen/dp_5"
            android:text="专属时长"
            android:textColor="@color/white" />
    </RelativeLayout>

    <Button
        android:id="@+id/mybackp_chongz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/bg_circle_solder_setin"
        android:text="充值"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView98"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_50"
        android:text="钻石："
        android:textColor="@color/black_oneeight"
        app:layout_constraintBottom_toTopOf="@+id/mybackp_chongz"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/mybackp_zsnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/mine_zuanshi"
        android:visibility="gone"
        android:drawablePadding="@dimen/dp_5"
        android:textColor="@color/black_oneeight"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView98"
        app:layout_constraintStart_toEndOf="@+id/textView98"
        tools:text="365" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mybackp_recy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="16dp"
        android:padding="@dimen/dp_6"
        android:background="@drawable/bg_corner_whitelit"
        app:layout_constraintBottom_toTopOf="@+id/textView98"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout4" />

</androidx.constraintlayout.widget.ConstraintLayout>