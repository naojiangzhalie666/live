<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/giftLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner_whitelit"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dialog_car_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/live_defaultimg" />

        <ProgressBar
            android:id="@+id/dialog_car_pro"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginLeft="14dp"
            android:layout_toLeftOf="@+id/dialog_car_zhinan"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/dialog_car_head"
            android:progress="30"
            android:max="100"
            android:progressDrawable="@drawable/pb_pd_sp_car"
           />

        <TextView
            android:id="@+id/dialog_car_what"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_car_pro"
            android:layout_alignLeft="@+id/dialog_car_pro"
            android:layout_marginTop="5dp"
            tools:text="再送50个钻石即可升级"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dialog_car_zhinan"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_car_pro"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:text="升级指南?"
            android:textColor="@color/home_txt"
            android:textSize="12sp"
            android:textStyle="normal" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="11dp"
        android:background="@color/live_color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_corner_ft"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/dialog_car_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableRight="@drawable/picture_icon_more"
            android:text="专属服务"
            android:textColor="@color/black"
            android:textSize="18sp"
             />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dialog_car_recy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/giftBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="账户余额:"
            android:textColor="@color/black_oneeight"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/dialog_car_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tt"
            android:paddingLeft="5dp"
            android:text="0"
            android:textColor="@color/black_oneeight"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/dialog_car_money"
            android:paddingTop="2dp"
            android:src="@drawable/gift_zuan" />


        <TextView
            android:id="@+id/dialog_car_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="22dp"
            android:background="@drawable/bg_circle_red"
            android:clickable="true"
            android:paddingLeft="16dp"
            android:paddingTop="6dp"
            android:paddingRight="16dp"
            android:paddingBottom="6dp"
            android:text="@string/live_gift_charge"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>