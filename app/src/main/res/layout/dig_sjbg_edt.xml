<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner_tpft"
    android:padding="@dimen/dp_12">

    <TextView
        android:id="@+id/sjbg_edt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/sjbg_save"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/sjbg_edt_beizhu"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_130"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_corner_whitelit"
        android:gravity="top"
        android:hint="为了方便持续诊断，可记录用户咨询的关键性信息，如咨询目的，目前状态，咨询办法等"
        android:padding="@dimen/dp_5"
        android:textColor="@color/black_oneeight"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/sjbg_edt_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView134"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="咨询记录："
        android:textColor="@color/black_oneeight"
        app:layout_constraintBottom_toTopOf="@+id/sjbg_edt_beizhu"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/sjbg_edt_title"
        android:layout_width="0dp"
        android:lines="1"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_corner_whitelit"
        android:hint="本次咨询关键词"
        android:padding="@dimen/dp_5"
        android:textColor="@color/black_oneeight"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/textView134"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView137"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="沟通记录标题："
        android:textColor="@color/black_oneeight"
        app:layout_constraintBottom_toTopOf="@+id/sjbg_edt_title"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView139"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="咨询时间："
        android:textColor="@color/black_oneeight"
        app:layout_constraintBottom_toTopOf="@+id/textView137"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/sjbg_edt_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_24"
        app:layout_constraintBottom_toTopOf="@+id/textView139"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/sjbg_close" />

    <TextView
        android:id="@+id/sjbg_edt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2021.03.25 "
        android:textColor="@color/black_oneeight"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView139"
        app:layout_constraintStart_toEndOf="@+id/textView139" />
</androidx.constraintlayout.widget.ConstraintLayout>