<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sanjiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ll"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/dig_corner_bg_rangle" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sanjiao"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/dig_corner_bg"
        android:minWidth="@dimen/dp_88"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_8">

        <TextView
            android:id="@+id/ruzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:text="申请入驻"
            android:textColor="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@color/ftwo" />

        <TextView
            android:id="@+id/jubao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:text="举报"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>