<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_15"
    android:scrollbars="none"
    tools:context=".fragment.setin.ManTwoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_20">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner_whitea"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15">

            <TextView
                android:id="@+id/manone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="15dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="擅长方向"
                android:textColor="@color/black_oneeight"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/textView25"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_8"
                android:text="*"
                android:textColor="@color/red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/manone_tv" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mantwo_top_recy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/manone_tv" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="10dp"
                android:text="资质审核"
                android:textColor="@color/black_oneeight"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/textView26"
                app:layout_constraintTop_toBottomOf="@+id/mantwo_top_recy" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView45" />

            <TextView
                android:id="@+id/mantwo_sttm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:minWidth="@dimen/dp_80"
                android:gravity="center"
                android:background="@drawable/bg_corner_ft"
                android:drawableRight="@drawable/mine_next"
                android:drawablePadding="@dimen/dp_5"
                android:padding="@dimen/dp_8"
                android:text="2019年5月6日"
                android:textColor="@color/home_txt"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView45" />

            <View
                android:id="@+id/textView31"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_1_5"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_circle_stoke_gray"
                app:layout_constraintBottom_toBottomOf="@+id/mantwo_sttm"
                app:layout_constraintStart_toEndOf="@+id/mantwo_sttm"
                app:layout_constraintTop_toTopOf="@+id/mantwo_sttm" />

            <TextView
                android:id="@+id/mantwo_edtm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_corner_ft"
                android:drawableRight="@drawable/mine_next"
                android:drawablePadding="@dimen/dp_5"
                android:padding="@dimen/dp_8"
                android:text="2019年5月6日"
                android:minWidth="@dimen/dp_80"
                android:gravity="center"
                android:textColor="@color/home_txt"
                android:textSize="10sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/mantwo_sttm"
                app:layout_constraintStart_toEndOf="@+id/textView31" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_corner_ft"
                android:gravity="left"
                android:lineSpacingExtra="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:text="参考示例：\n接受XXX心理咨询培训，获取XXX心理咨询师证书。"
                android:textColor="@color/nineninenine"
                android:textSize="11sp"
                app:layout_constraintTop_toBottomOf="@+id/mantwo_sttm" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mantwo_zizhi_recy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv1" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/bg_corner_whitea"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_20">

            <TextView
                android:id="@+id/manone_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="其他说明"
                android:textColor="@color/black_oneeight"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/mantwo_other_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="left|top"
                android:hint="如果您有其他要说明的信息，请在此处留言。"
                android:padding="@dimen/dp_8"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/manone_" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mantwo_other_recy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mantwo_other_edt" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/setin_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_circle_solder_setin"
            android:text="提交审核"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>
</ScrollView>