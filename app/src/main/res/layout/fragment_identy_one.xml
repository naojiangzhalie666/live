<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/dp_10"
    android:layout_height="wrap_content"
    android:background="@drawable/denti_bg_white"
    tools:context=".fragment.identy.IdentyOneFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10">

        <TextView
            android:id="@+id/identyone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="真实姓名"
            android:textColor="@color/black_oneeight"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="身份证号"
            android:textColor="@color/black_oneeight"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView42" />

        <TextView
            android:id="@+id/textView48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="有效期"
            android:textColor="@color/black_oneeight"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView43" />

        <TextView
            android:id="@+id/textView49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="身份验证"
            android:textColor="@color/black_oneeight"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView44" />

        <EditText
            android:id="@+id/identyone_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入真实姓名"
            android:textColor="@color/black_oneeight"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/identyone_tv"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/identyone_shenfcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入身份证号"
            android:textColor="@color/black_oneeight"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView45"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/identyone_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="right"
            android:hint="身份证开始时间-身份证失效期"
            android:textColor="@color/black_oneeight"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView48"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/textView42"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1_5"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/line_dott"
            android:layerType="software"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/identyone_tv" />

        <View
            android:id="@+id/textView43"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1_5"
            android:layout_marginTop="10dp"
            android:background="@drawable/line_dott"
            android:layerType="software"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.727"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView45" />

        <View
            android:id="@+id/textView44"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1_5"
            android:layout_marginTop="10dp"
            android:background="@drawable/line_dott"
            android:layerType="software"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.272"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView48" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/identyone_confrond"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toStartOf="@+id/identyone_conback"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView49">

            <TextView
                android:id="@+id/textView50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_corner_home"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="拍摄正面"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/identyone_frond" />

            <ImageView
                android:id="@+id/identyone_frond"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_corner_cbe"
                android:src="@drawable/denti_sffrond"
                android:padding="@dimen/dp_10"
                app:layout_constraintBottom_toTopOf="@+id/textView50"
                app:layout_constraintDimensionRatio="w,1.7:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/identyone_conback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/identyone_confrond"
            app:layout_constraintTop_toBottomOf="@+id/textView49">

            <ImageView
                android:id="@+id/identyone_back"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_corner_cbe"
                android:padding="@dimen/dp_10"
                android:src="@drawable/denti_sfback"
                app:layout_constraintBottom_toTopOf="@+id/textView51"
                app:layout_constraintDimensionRatio="w,1.7:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_corner_home"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="拍摄反面"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/identyone_back" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView52"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:lineSpacingExtra="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_15"
            android:text="@string/advice_miaoshu"
            android:textColor="@color/nineninenine"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/identyone_confrond" />


        <Button
            android:id="@+id/identy_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/bg_circle_solder_setin"
            android:text="下一步"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView52" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>