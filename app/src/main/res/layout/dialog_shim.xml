<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_70"
    android:layout_marginRight="@dimen/dp_70"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_shim_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_8"
        android:src="@drawable/pj_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_shim_close"
        android:background="@drawable/bg_corner_white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_26"
            android:src="@drawable/wallet_shenfen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_26"
            android:text="根据监管规定，为保障\n账户安全，请完成实名验证。"
            android:textColor="@color/black_oneeight" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="边框心里安全保障"
            android:textColor="@color/nineninenine"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/dialog_tvbt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_circle_solder_setin"
            android:gravity="center"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="实名认证"
            android:textColor="@color/white" />


    </LinearLayout>

</RelativeLayout>