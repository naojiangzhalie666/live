<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/bg_corner_whitea">

    <TextView
        android:id="@+id/item_sj_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sixsixsix"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_sj_head"
        app:layout_constraintStart_toStartOf="@+id/item_sj_zsnum"
        tools:text="订单编号：1156415616516516" />

    <TextView
        android:id="@+id/item_sj_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:drawableRight="@drawable/mine_next"
        android:drawablePadding="@dimen/dp_5"
        android:text="畅聊充值包"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_sj_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_solder_nin"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_2"
        tools:text="已评价"
        android:textColor="@color/nineninenine"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_sj_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/item_sj_head"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_sj_title"
        app:srcCompat="@drawable/man_se" />

    <TextView
        android:id="@+id/item_sj_zsnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/item_sj_head"
        app:layout_constraintTop_toTopOf="@+id/item_sj_head"
        tools:text="疏解时长：500分钟" />

    <TextView
        android:id="@+id/item_sj_creattime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sixsixsix"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/item_sj_code"
        app:layout_constraintStart_toStartOf="@+id/item_sj_zsnum"
        app:layout_constraintTop_toBottomOf="@+id/item_sj_zsnum"
        tools:text="创建时间：2021.03.27  8:36" />

    <TextView
        android:id="@+id/item_sj_zuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:drawableRight="@drawable/order_zuanshi"
        android:drawablePadding="@dimen/dp_4"
        android:textColor="@color/red"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_sj_head"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="-666" />

    <TextView
        android:id="@+id/item_sj_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="@dimen/dp_14"
        android:background="@drawable/bg_circle_stoke_red"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_6"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_6"
        android:text="再次连线"
        android:textColor="@color/red"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_sj_btll" />

    <TextView
        android:id="@+id/item_sj_talk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="@dimen/dp_14"
        android:background="@drawable/bg_circle_stoke_gray"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_6"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_6"
        android:text="私信"
        android:textColor="@color/black_oneeight"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_sj_again"
        app:layout_constraintTop_toBottomOf="@+id/item_sj_btll"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/item_sj_pj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="@dimen/dp_14"
        android:background="@drawable/bg_circle_stoke_gray"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_6"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_6"
        android:text="评价"
        android:textColor="@color/black_oneeight"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_sj_talk"
        app:layout_constraintTop_toBottomOf="@+id/item_sj_btll"
        app:layout_constraintVertical_bias="1.0" />

    <RatingBar
        android:id="@+id/item_sj_start"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_15"
        android:visibility="gone"
        android:layout_marginStart="8dp"
        android:isIndicator="true"
        android:progressDrawable="@drawable/order_star"
        app:layout_constraintBottom_toBottomOf="@+id/item_sj_title"
        app:layout_constraintStart_toEndOf="@+id/item_sj_title"
        app:layout_constraintTop_toTopOf="@+id/item_sj_title" />

    <LinearLayout
        android:id="@+id/item_sj_btll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_sj_head">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余时长:"
            android:textColor="@color/threethree"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_sj_leftm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100分钟"
            android:textColor="@color/red"
            android:textSize="12sp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>