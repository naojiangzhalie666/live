<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_corner_white_tp">


    <TextView
        android:id="@+id/textView81"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_17"
        android:paddingBottom="@dimen/dp_10"
        android:text="支付方式"
        android:textColor="@color/black_oneeight"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/buz_scroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/buz_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/dig_buy_wchat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/buz_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <FrameLayout
        android:id="@+id/login_cbxieyi"
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_13"
        android:layout_alignTop="@+id/login_tvxieyi"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_circle"
        android:button="@null"
        android:clickable="false"
        app:layout_constraintBottom_toTopOf="@+id/textView94"
        app:layout_constraintStart_toStartOf="@+id/buz_scroll">

        <ImageView
            android:id="@+id/login_imgv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_3"
            android:src="@drawable/login_select" />

    </FrameLayout>

    <TextView
        android:id="@+id/textView90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_6"
        android:text="充值代表已阅读并同意"
        android:textColor="@color/nineninenine"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/login_cbxieyi"
        app:layout_constraintBottom_toBottomOf="@+id/login_cbxieyi"
        app:layout_constraintTop_toTopOf="@+id/login_cbxieyi" />

    <TextView
        android:id="@+id/dig_buy_xieyi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="《用户充值协议》"
        android:textColor="@color/read_dot_bg"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView90"
        app:layout_constraintStart_toEndOf="@+id/textView90" />


    <TextView
        android:id="@+id/dig_buy_wchat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_circle_green"
        android:gravity="center"
        android:padding="@dimen/dp_14"
        android:text="微信支付"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/login_cbxieyi"
        app:layout_constraintEnd_toStartOf="@+id/dig_buy_zfb"
        app:layout_constraintStart_toStartOf="@+id/buz_scroll" />


    <TextView
        android:id="@+id/dig_buy_zfb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_circle_blue"
        android:gravity="center"
        android:padding="@dimen/dp_14"
        android:text="支付宝支付"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/dig_buy_wchat"
        app:layout_constraintEnd_toEndOf="@+id/buz_scroll"
        app:layout_constraintStart_toEndOf="@+id/dig_buy_wchat"
        app:layout_constraintTop_toTopOf="@+id/dig_buy_wchat" />

    <View
        android:id="@+id/textView94"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_4"
        android:layout_marginBottom="10dp"
        android:background="@color/ftwo"
        app:layout_constraintBottom_toTopOf="@+id/dig_buy_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dig_buy_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_16"
        android:text="取消"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>